---
import { ta2 } from "../../common/list.js";
---

<div class="lg:p-8">
  <h1
    class="font-header text-3xl font-bold md:text-6xl lg:text-6xl"
  >
    Meet Your TAs
  </h1>

  <div
    class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
  >
    {
      ta2.map((member) => (
        <div class="flex justify-between gap-5 max-md:flex-wrap">
          <div class="flex flex-col items-start justify-center self-start pb-2">
            <div class="relative flex flex-col items-end p-5 max-md:pl-5">
              <img
                src={`/people/${member.image}.png`}
                class="rounded-3xl align-middle sm:h-12 md:h-48 lg:h-64"
                alt={member.name}
              />

              {member.github && (
                <a
                  href={member.github}
                  target="_blank"
                  class="absolute bottom-7 left-7 aspect-square h-12 p-2"
                >
                  <img
                    loading="lazy"
                    src="/apprenticeship/github.png"
                    class="rounded-xl"
                    alt="GitHub"
                  />
                </a>
              )}

              {member.twitter && (
                <a
                  href={member.twitter}
                  target="_blank"
                  class="absolute bottom-7 left-16 aspect-square h-12 p-2"
                >
                  <img
                    loading="lazy"
                    src="/apprenticeship/twitter.png"
                    class="rounded-xl"
                    alt="Twitter"
                  />
                </a>
              )}
            </div>

            <div class="ml-4 mt-3 pl-2 font-header text-2xl font-bold uppercase text-orange">
              {member.name}
            </div>
            <div class="ml-4 pl-2 text-base font-medium">
              {member.desc}
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>
