<section
  class="w-full px-4 py-16 md:px-8 lg:px-24 xl:px-32"
>
  <div class="mx-auto max-w-[1400px]">
    <h2 class="mb-8 font-header text-6xl">
      <span class="text-[#FF6B9E]">Who's shaping</span> the conversation
    </h2>

    <div class="mx-auto mb-12 space-y-4">
      <p>
        Past summits have included a mix of maintainers,
        protocol researchers, wallet engineers, UX designers
        working on key management, privacy engineers, and
        infrastructure maintainers.
      </p>
      <p>
        We publish contributor names only with their
        permission, and we curate the room to ensure
        conversations are productive, focused, and useful.
      </p>
    </div>

    <div
      class="mb-16 grid grid-cols-1 gap-8 lg:grid-cols-2"
    >
      {
        speakers.map((speaker) => (
          <div class="rounded-3xl border-2 border-[#6B4458] bg-[#3D2434] p-8">
            <div class="flex gap-6">
              <div class="flex flex-shrink-0 flex-col items-center text-center">
                <img
                  src={speaker.image}
                  alt={speaker.name}
                  class="mb-4 h-32 w-32 rounded-full border-4 border-[#6B4458] object-cover"
                />
                <p class="font-bold">{speaker.name}</p>
                <p class="text-gray-400 text-sm">
                  {speaker.role}
                </p>
              </div>

              <div class="flex-1">
                <h3 class="mb-1 text-2xl font-bold">
                  {speaker.projectHighlight ? (
                    <>
                      {speaker.project}{" "}
                      <span class="text-[#D4FF00]">
                        {speaker.projectHighlight}
                      </span>
                    </>
                  ) : (
                    speaker.project
                  )}
                </h3>
                <p class="mb-4 text-sm">
                  {speaker.subtitle}
                </p>

                <p class="mb-4 text-sm leading-relaxed">
                  {speaker.description}
                </p>
                <p class="text-sm">{speaker.details}</p>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <div class="text-center">
      <button
        class="rounded-full bg-[#8B5A7C] px-12 py-4 text-lg font-bold transition-colors hover:bg-[#9B6A8C]"
      >
        some CTA
      </button>
    </div>
  </div>
</section>
