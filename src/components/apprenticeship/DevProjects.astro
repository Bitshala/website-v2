    {
      list.map((item) => (
        <div class="flex h-full flex-col rounded-3xl border-[1px] border-[#e0e0e0] bg-peach">
          <div class="flex h-full flex-col p-6">
            {/* Logo and links in same line */}
            <div class="mb-6 flex items-center justify-between">
              <img
                loading="lazy"
                srcset={item.logo}
                class="h-10 rounded-full object-cover"
              />
              <div class="flex gap-2">
                <a
                  href={item.github}
                  target="_blank"
                  class="group"
                >
                  <img
                    src="/apprenticeship/github.png"
                    class="h-8 rounded bg-peach p-1 group-hover:bg-white"
                  />
                </a>
                {item.discord && (
                  <a
                    href={item.discord}
                    target="_blank"
                    class="group"
                  >
                    <img
                      src="/apprenticeship/discord.png"
                      class="h-8 rounded bg-peach p-1 group-hover:bg-white"
                    />
                  </a>
                )}
              </div>
            </div>

            {/* Project name */}
            <div class="mb-4 font-header text-xl font-medium lg:text-2xl">
              {item.name}
            </div>

            {/* Description - flex-grow to push language tags to bottom */}
            <div class="mb-6 flex-grow text-sm font-normal lg:text-base">
              {item.desc}
            </div>

            {/* Language tags - at bottom */}
            <div class="mt-auto flex flex-wrap items-center gap-2">
              <p class="text-sm font-semibold">Language:</p>
              {item.skills.map((skill) => (
                <span class="rounded-lg bg-[#ffdec7] px-3 py-1 text-sm font-medium">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))
