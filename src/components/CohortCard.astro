---
const cardsList = [
  {
    name: "Learning Bitcoin From The Command Line",
    img: "/website-v2/cohort/lbtcl.png",
    no: "02",
    desc: "Donec laoreet congue justo at rhoncus. Nam aliquet suscipit feugiat...",
    bgColor: "bg-orange",
    buttonBg: "bg-white",
    buttonText: "text-black",
  },
  {
    name: "Mastering Bitcoin by Andreas M. ",
    img: "/website-v2/cohort/masteringBitcoin.png",
    no: "01",
    desc: "Donec laoreet congue justo at rhoncus. Nam aliquet suscipit feugiat...",
    bgColor: "bg-black",
    buttonBg: "bg-black",
    buttonText: "text-white",
  },
];
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
  {
    cardsList.map((card) => (
      <div>
        <div
          class={` rounded-lg md:mx-5 ${card.bgColor} my-2 p-3 text-white`}
        >
          <img src={card.img} class="w-fit" />
          <div class="my-2 px-3">
            <p class="text-sm lg:text-xl">
              cohort #{card.no}
            </p>
            <h1 class="text-2xl font-semibold lg:text-4xl">
              {card.name}
            </h1>
            <p class="text-base lg:text-xl">{card.desc}</p>
          </div>
          <button
            class={`my-2 w-full rounded-lg text-base lg:text-xl ${card.buttonBg} px-3 py-5 font-semibold ${card.buttonText} border-2 border-dotted border-white `}
          >
            Visit the Cohort Page
          </button>
        </div>
      </div>
    ))
  }
</div>
