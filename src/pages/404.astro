---
import Layout from "../layouts/Layout.astro";
const headerProps = {
  image: "/404/bg.png",
};
const isVisible = false;
---

<Layout
  title="Mastering Bitcoin"
  headerProps={headerProps}
  isVisible={isVisible}
>
  <div
    slot="headerChild"
    class="flex w-full flex-col items-center justify-center gap-3 font-bold"
  >
    <img src="/404/404.png" class="h-auto w-1/2" />
    <p class="text-md mt-10 text-white lg:text-2xl">
      Oops...Page Not Found!
    </p>
    <a
      href="/"
      class="text-md mx-3 flex items-center justify-center rounded-2xl bg-white p-4 text-center text-black outline-white hover:bg-black hover:text-white hover:outline-dashed lg:w-1/3 lg:text-2xl"
      >Go Back to Home
    </a>
  </div>
</Layout>
