---
import Layout from "../layouts/Layout.astro";
import About from "../components/readingClub/About.astro";
import Calender from "../components/common/Calender.astro";
import PreviouslyCovered from "../components/readingClub/PreviouslyCovered";

const headerProps = {
  removeHeader: true,
};
const isVisible = true;
const img = "/carousel/2.webp";
---

<Layout
  title="Reading Club"
  headerProps={headerProps}
  isVisible={isVisible}
>
  <div
    style={{
      backgroundImage: `url(${img})`,
      backgroundSize: "contain",
      backgroundRepeat: "no-repeat",
      backgroundPosition: "center",
    }}
    class="justify-betweenpx-5 m-auto mt-20 flex min-h-[30vh] flex-col items-center rounded-2xl pb-12 pt-32 md:min-h-[60vh] lg:min-h-[90vh]"
  >
  </div>
  <About />
  <PreviouslyCovered />
  <Calender />
</Layout>
