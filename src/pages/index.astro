---
import Carousel from "../components/common/Carousel";
import Layout from "../layouts/Layout.astro";
import Footer from "../components/common/Footer.astro";
import Testimonial from "../components/home/Testimonial.astro";
import LinkCohort from "../components/home/LinkCohort.astro";
import People from "../components/home/People.astro";
import Header from "../components/common/Header.astro";
---

<Layout title="Welcome to Bitshala">
  <Header
    heading=""
    subheading=""
    image="/website-v2/home/headerbg.png"
    headingColor=""
    subheadingColor=""
  >
    <h1
      slot="heading"
      class="font-header text-6xl leading-4 text-white lg:text-[15rem]"
    >
      Bitshala:
    </h1>
    <h2
      slot="subheading"
      class="text-center font-header text-4xl text-orange lg:text-8xl"
    >
      A Pathshala for Bitcoin
    </h2>
    <div slot="after-heading">
      <p
        class="mb-8 text-center text-xl text-white lg:text-5xl"
      >
        Empowering developers to thrive in Bitcoin FOSS
        World
      </p>
      <div class="mt-20 flex w-full justify-between">
        <a
          href="https://discord.gg/ekzAUeeR"
          target="_blank"
          class="text-m mx-3 flex w-1/2 items-center justify-center rounded-lg bg-orange p-4 text-center lg:text-2xl"
          >Dive into the Rabbit Hole</a
        >
        <a
          href="/website-v2/cohort"
          class="text-m mx-3 flex w-1/2 items-center justify-center rounded-lg p-4 text-center text-white outline-dashed outline-white lg:text-2xl"
          >Check out the Study Cohorts</a
        >
      </div>
    </div>
  </Header>

  <Testimonial />
  <Carousel client:visible />
  <LinkCohort />
  <People />
  <Footer />
</Layout>
