---
import Carousel from "../components/common/Carousel";
import Layout from "../layouts/Layout.astro";
import Testimonial from "../components/home/Testimonial.astro";
import LinkCohort from "../components/home/LinkCohort.astro";
import People from "../components/home/People.astro";

const headerProps = {
  image: "/home/headerbg.webp",
};
---

<Layout
  title="Welcome to Bitshala"
  headerProps={headerProps}
>
  <div
    slot="headerChild"
    class="flex h-[70vh] flex-col justify-between"
  >
    <h1
      class="text-center font-header text-6xl text-white lg:text-[15rem]"
    >
      Bitshala:
    </h1>
    <h2
      class="text-center font-header text-4xl text-orange lg:text-8xl"
    >
      A Pathshala for Bitcoin
    </h2>
    <div slot="after-heading">
      <p
        class="mb-8 text-center text-xl text-white lg:text-5xl"
      >
        Empowering developers to thrive in Bitcoin FOSS
        World
      </p>
      <div class="mt-20 flex w-full justify-between">
        <a
          href="https://discord.gg/ekzAUeeR"
          target="_blank"
          class="text-m mx-3 flex w-1/2 items-center justify-center rounded-lg bg-orange p-4 text-center hover:bg-black hover:text-orange hover:outline-dashed lg:text-2xl"
          >Join Our Community</a
        >
        <a
          href="/cohorts"
          class="text-m mx-3 flex w-1/2 items-center justify-center rounded-lg bg-black p-4 text-center text-white outline-dashed outline-white hover:bg-white hover:text-black lg:text-2xl"
          >Check our Study Cohorts</a
        >
      </div>
    </div>
  </div>
  <Testimonial />
  <Carousel client:visible />
  <LinkCohort />
  <People />
</Layout>
