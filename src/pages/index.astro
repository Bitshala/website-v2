---
import Carousel from "../components/common/Carousel";
import Layout from "../layouts/Layout.astro";
import Testimonial from "../components/home/Testimonial.astro";
import LinkCohort from "../components/home/LinkCohort.astro";
import People from "../components/home/People.astro";
import About from "../components/home/About.astro";
import Newsletter from "../components/common/Newsletter";
import Calender from "../components/common/Calender.astro";
import JourneyGuide from "../components/home/JourneyGuide.astro";

const headerProps = {
  image: "/home/headerbg.webp",
  removePadding: true,
};
const isVisible = true;
---

<Layout
  title="Bitshala | A Pathshala for Bitcoin | India, Global South"
  headerProps={headerProps}
  isVisible={isVisible}
>
  <div
    slot="headerChild"
    class="mx-auto flex h-[30vh] max-w-screen-xl flex-col justify-between"
  >
    <h1
      class="text-center font-header text-7xl font-bold text-white lg:text-[14rem]"
    >
      Bitshala
    </h1>
    <h2
      class="mt-0 text-center font-header text-[25px] font-bold text-orange lg:text-[4.8rem]"
    >
      A Pathshala for Bitcoin
    </h2>
    <div slot="after-heading">
      <p
        class="mt-5 hidden text-center text-xl font-normal text-white lg:block lg:text-3xl"
      >
        Empowering developers to enter and thrive in the
        world <br /> of Bitcoin FOSS (Free and Open Source
        Software)
      </p>
      <p
        class="mt-5 block text-center text-xl font-normal text-white lg:hidden lg:text-3xl"
      >
        Empowering developers to <br /> enter and thrive in
        the world of <br /> Bitcoin FOSS (Free and Open <br
        /> Source Software)
      </p>
      <div
        class="mt-5 flex w-full flex-col justify-between font-bold lg:mt-20 lg:flex-row"
      >
        <a
          href="https://discord.com/invite/STeQFVEWf9"
          target="_blank"
          class="mx-3 flex items-center justify-center rounded-lg bg-white p-3 text-center text-sm hover:border-[1px] hover:bg-orange hover:text-white hover:outline-none lg:w-1/2 lg:rounded-xl lg:p-4 lg:text-2xl"
          >Join Our Community

          <img
            src="/apprenticeship/discord1.png"
            class="mt-1 h-6 rounded-full text-white lg:h-10"
          />
        </a>
        <a
          href="/cohorts"
          class="mx-3 mt-2 flex items-center justify-center rounded-lg border-[1px] bg-black bg-opacity-50 p-3 text-center
           text-sm text-white hover:bg-white hover:text-black lg:mt-0 lg:w-1/2 lg:rounded-xl lg:p-4 lg:text-2xl"
          >Explore study cohorts â†’</a
        >
      </div>
    </div>
  </div>
  <About />
  <Carousel client:visible />
  <Testimonial />
  <JourneyGuide />
  <LinkCohort class:load />
</Layout>
