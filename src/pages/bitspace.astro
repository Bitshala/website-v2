---
import About from "../components/bitspace/About.astro";
import Layout from "../layouts/Layout.astro";
import UpcomingEvents from "../components/bitspace/UpcomingEvents.astro";
import JoinTheSpace from "../components/bitspace/JoinTheSpace.astro";
import Gallery from "../components/bitspace/gallery";
import CollabWithUs from "../components/bitspace/CollabWithUs.astro";
import PreviousEvents from "../components/bitspace/PreviousEvents.astro";
---

<Layout
  title="Bitspace"
  headerProps={{
    image: "/bitspace/hero.webp",
  }}
  isVisible={true}
>
  <div
    slot="headerChild"
    class="flex flex-col justify-between lg:h-[70vh]"
  >
    <h1
      class="text-center font-header text-4xl text-white lg:text-8xl xl:text-[12rem]"
    >
      Bitshala Bitspace
    </h1>
    <h2
      class="mx-5 text-center text-xl text-white lg:mx-20 lg:font-header lg:text-5xl"
    >
      Indiaâ€™s Bitcoin-Only community hub for Bitcoin
      enthusiasts to work, learn, and have a ton of fun!
    </h2>
    <div
      class="mt-20 flex w-full flex-col justify-center gap-3 font-bold lg:flex-row"
    >
      <a
        href="#events"
        class="text-m mx-3 flex items-center justify-center rounded-2xl bg-white p-4 text-center text-black outline-white hover:bg-black hover:text-white hover:outline-dashed lg:w-1/3 lg:text-2xl"
        >Check out upcoming events at Bitspace
      </a>
    </div>
  </div>
  <About />
  <JoinTheSpace />
  <div id="events">
    <UpcomingEvents />
  </div>
  <PreviousEvents />
  <Gallery client:load />
  <CollabWithUs />
</Layout>
