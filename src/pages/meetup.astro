---
import About from "../components/meetup/About.astro";
import Gallery from "../components/meetup/gallery";
import Layout from "../layouts/Layout.astro";

const isVisible = true;
const headerProps = {
  //   heading: "BITDEVS",
  //   subheading:
  //     "Monthly Offline Meetup to dive into the core of Bitcoin Tech",
  image: "/header/Meetup_Hero.webp",
  //   headingColor: "text-white",
  //   subheadingColor: "text-white",
};
---

<Layout
  title="Meetup"
  headerProps={headerProps}
  isVisible={isVisible}
>
  <div
    slot="headerChild"
    class="flex flex-col items-center justify-center"
  >
    <h1
      class="text-center font-header text-4xl text-white md:text-6xl lg:text-9xl"
    >
      BITDEVS
    </h1>
    <p
      class="mx-96 mt-10 w-1/2 text-center text-2xl font-semibold text-white md:text-3xl lg:mt-28 lg:text-5xl"
    >
      Monthly Offline Meetup to dive into the core of
      Bitcoin Tech
    </p>

    <a
      href="https://discord.com/invite/STeQFVEWf9"
      target="_blank"
      class="text-m mt-60 w-1/3 rounded-lg bg-white p-4 text-center hover:bg-orange hover:text-white lg:text-2xl"
      >Explore Upcoming Meetups</a
    >
  </div>
  <About />
  <Gallery />
</Layout>
