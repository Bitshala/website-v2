---
import Footer from "../components/common/Footer.astro";
import Header from "../components/common/Header.astro";
import Navbar from "../components/common/Navbar";
import Hamburger from "../components/common/hamburger";
import Notification from "../components/common/notification";
// import Notification from "../components/common/notification";
interface Props {
  title: string;
  headerProps: any;
  isVisible: boolean;
}

const { title, headerProps, isVisible } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Bitshala is a grassroot, organic education initiative (a pathshala) led by Indian bitcoiners to provide guidance and resources for new developers starting their bitcoin journey."
    />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      href="/footer/logo.png"
      sizes="any"
      type="image/svg+xml"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Google tag (gtag.js) -->
    <script
      type="text/partytown"
      async
      src="https://www.googletagmanager.com/gtag/js?id=G-MMXLBEEY37"
    ></script>
    <script type="text/partytown">
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-MMXLBEEY37");
    </script>

    <!-- Facebook Meta Tags -->
    <meta
      property="og:url"
      content="https://bitshala.org"
    />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Bitshala | A Pathshala for Bitcoin | India, Global South"
    />
    <meta
      property="og:description"
      content="Bitshala is a grassroot, organic education initiative (a pathshala) led by Indian bitcoiners to provide guidance and resources for new developers starting their bitcoin journey."
    />
    <meta
      property="og:image"
      content="https://opengraph.b-cdn.net/production/documents/be8ca05b-5de1-4ab8-99b6-b064c8ad0b4c.png?token=Jriat_jsVklKiXah09FNuY3b8X2kT-Vv-3eN4Cgdyvg&height=675&width=1200&expires=33241899715"
    />

    <!-- Twitter Meta Tags -->
    <meta
      name="twitter:card"
      content="summary_large_image"
    />
    <meta
      property="twitter:domain"
      content="bitshala.org"
    />
    <meta
      property="twitter:url"
      content="https://bitshala.org"
    />
    <meta
      name="twitter:title"
      content="Bitshala | A Pathshala for Bitcoin | India, Global South"
    />
    <meta
      name="twitter:description"
      content="Bitshala is a grassroot, organic education initiative (a pathshala) led by Indian bitcoiners to provide guidance and resources for new developers starting their bitcoin journey."
    />
    <meta
      name="twitter:image"
      content="https://opengraph.b-cdn.net/production/documents/be8ca05b-5de1-4ab8-99b6-b064c8ad0b4c.png?token=Jriat_jsVklKiXah09FNuY3b8X2kT-Vv-3eN4Cgdyvg&height=675&width=1200&expires=33241899715"
    />
  </head>
  <body class="bg-white">
    <Navbar client:only />

    <div class=`${isVisible ? "block" : "hidden"}`>
      <Notification
        message="Register for upcoming PB Study Cohort"
        url="/cohorts/pb/#applicationForm"
        client:only
      />
    </div>

    {
      headerProps.removeHeader ? null : (
        <div>
          <Header {...headerProps}>
            <slot name="headerChild" />
          </Header>
        </div>
      )
    }
    {
      headerProps.removePadding ? (
        <div class="m-auto max-w-full">
          <div class="isolate z-0">
            <slot />
          </div>
        </div>
      ) : (
        <div class="m-auto max-w-screen-xl p-4 lg:p-0">
          <div class="isolate z-0">
            <slot />
          </div>
        </div>
      )
    }

    <Footer />
  </body>
  <style>
    @font-face {
      font-family: "Satoshi";
      src:
        url("/fonts/Satoshi-Medium.woff2") format("woff2"),
        url("/fonts/Satoshi-Medium.otf") format("opentype");
      font-weight: normal;
      font-style: normal;
      font-display: swap;
    }

    @font-face {
      font-family: "Satoshi";
      src:
        url("/fonts/Satoshi-Bold.woff2") format("woff2"),
        url("/fonts/Satoshi-Bold.otf") format("opentype");
      font-weight: bold;
      font-style: normal;
      font-display: swap;
    }

    @font-face {
      font-family: "Satoshi";
      src:
        url("/fonts/Satoshi-Medium.woff2") format("woff2"),
        url("/fonts/Satoshi-Medium.otf") format("opentype");
      font-weight: normal;
      font-style: normal;
      font-display: swap;
    }

    @font-face {
      font-family: "Satoshi";
      src:
        url("/fonts/Satoshi-Bold.woff2") format("woff2"),
        url("/fonts/Satoshi-Bold.otf") format("opentype");
      font-weight: bold;
      font-style: normal;
      font-display: swap;
    }

    /* Apfel Grotezk for headers and bold text */
    @font-face {
      font-family: "Apfel Grotezk";
      src:
        url("/fonts/ApfelGrotezk-Mittel.woff2")
          format("woff2"),
        url("/fonts/ApfelGrotezk-Mittel.otf")
          format("opentype");
      font-weight: 500; /* Mittel weight */
      font-style: normal;
      font-display: swap;
    }

    @font-face {
      font-family: "Apfel Grotezk";
      src:
        url("/fonts/ApfelGrotezk-Fett.woff2")
          format("woff2"),
        url("/fonts/ApfelGrotezk-Fett.otf")
          format("opentype");
      font-weight: 700; /* Fett weight (bold) */
      font-style: normal;
      font-display: swap;
    }

    /* Default font for body text */
    html {
      font-family: "Satoshi", sans-serif;
    }

    /* Headers use Apfel Grotezk and are bold */
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      font-family: "Apfel Grotezk", sans-serif;
      font-weight: bold; /* Fett weight applied */
    }

    /* All bold text uses Apfel Grotezk */
    b,
    strong {
      font-family: "Apfel Grotezk", sans-serif;
      font-weight: bold; /* Fett weight applied */
    }
  </style>
</html>
