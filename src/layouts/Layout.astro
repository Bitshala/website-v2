---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Bitshala: A Pathshala for Bitcoin"
    />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      href="/website-v2/favicon.svg"
      sizes="any"
      type="image/svg+xml"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-white p-3 md:p-5 lg:p-8">
    <slot />
  </body>
</html>

<style>
  @font-face {
    font-family: "Aeonik Fono";
    src: url("/website-v2/fonts/AeonikFono.otf")
      format("opentype");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  @font-face {
    font-family: "Firs Neue";
    src: url("/website-v2/fonts/FirsNeue.ttf")
      format("truetype");
    font-weight: bold;
    font-style: normal;
    font-display: swap;
  }
  html {
    font-family: "Aeonik Fono", sans-serif;
  }
  h1 {
    font-family: "Firs Neue", sans-serif;
    font-weight: bold;
  }
</style>
